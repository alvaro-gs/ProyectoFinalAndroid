<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetalleProductoFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvTitulo"
                android:text="@string/detalleProducto"
                android:background="@color/morado1"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:paddingVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ProgressBar
                android:id="@+id/pbLoading"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/tvTitulo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:indeterminateDrawable="@drawable/loading_anim"
                android:indeterminateDuration="1500"
                />
            <TextView
                android:id="@+id/tvName"
                app:layout_constraintTop_toBottomOf="@id/pbLoading"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/ivProduct"
                android:text="TextoName"
                style="@style/NormalText"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/ivProduct"
                android:src="@drawable/ic_image"
                app:layout_constraintTop_toBottomOf="@+id/tvName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:layout_width="250dp"
                android:layout_height="250dp"/>

            <TextView
                android:id="@+id/tvDescriptionTitle"
                android:text="@string/descripciÃ³n"
                style="@style/NormalText"
                app:layout_constraintTop_toBottomOf="@id/ivProduct"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvDescription"
                android:background="@drawable/bordes_tv"
                android:text="TextoDescription"
                app:layout_constraintTop_toBottomOf="@id/tvDescriptionTitle"
                app:layout_constraintStart_toStartOf="@id/ivProduct"
                app:layout_constraintEnd_toEndOf="@id/ivProduct"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvTypeTitle"
                android:text="@string/tipo"
                style="@style/NormalText"
                app:layout_constraintTop_toBottomOf="@id/tvDescription"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvType"
                android:background="@drawable/bordes_tv"
                android:text="TextoTipo"
                app:layout_constraintTop_toBottomOf="@id/tvTypeTitle"
                app:layout_constraintStart_toStartOf="@id/ivProduct"
                app:layout_constraintEnd_toEndOf="@id/ivProduct"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvPresentationsTitle"
                android:text="@string/presentaciones"
                style="@style/NormalText"
                app:layout_constraintTop_toBottomOf="@id/tvType"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvPresentations"
                android:background="@drawable/bordes_tv"
                android:text="TextoPresentaciones"
                app:layout_constraintTop_toBottomOf="@id/tvPresentationsTitle"
                app:layout_constraintStart_toStartOf="@id/ivProduct"
                app:layout_constraintEnd_toEndOf="@id/ivProduct"
                android:textAlignment= "center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btOrder"
                android:text="@string/ordenar"
                app:layout_constraintTop_toBottomOf="@id/tvPresentations"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
